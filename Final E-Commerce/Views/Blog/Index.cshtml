@model BlogDetailVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex flex-row wrap-nowrap">
        @foreach (var blog in Model.Blogs)
        {

            <div class="card m-3 custom-blog" style="width: 25rem;">
                <a class="w-75 h-50 align-self-center" asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id">
                <img style="width: 100%; height: 100%" src="~/images/blog/@blog.ImageUrl" class="card-img-top align-self-center" alt="...">
                   </a>
                <div class="card-body">
                   <a class="text-dark text-decoration-none fw-bold" asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id">
                        <h3 class="card-title">@blog.Title</h3>
                   </a> 
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        @if (blog.BlogSubjects!=null)
                        {
                            foreach (var tag in blog.BlogSubjects)
                            {
                                <span style="color:rgb(58,110,253)">@tag.Subjects.Name </span>
                            }
                        }
                    </li>
                    <li class="list-group-item">Author: @blog.Author</li>
                    <li class="list-group-item">Read: @blog.ViewCount times Comments: @blog.CommentCount</li>
                </ul>
                @if (blog.LastUpdated!=null)
                {
                    <p class="card-text" style="margin-left: 5%"><small class="text-muted">Last updated: @blog.LastUpdated?.ToString("dddd, dd MMMM yyyy HH:mm")</small></p>
                }
                else{
                    <p class="card-text" style="margin-left: 5%"><small class="text-muted">Date: @blog.Date?.ToString("dddd, dd MMMM yyyy HH:mm")</small></p>
                }
            </div>
        }
    </div>
</div>