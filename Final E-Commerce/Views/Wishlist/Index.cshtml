@model WishlistVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
        @foreach (var item in Model.Products)
        {
        <div class="card mb-3" style="width: 100%;">
            <div class="row g-0">
                <div class="col-md-4">
                    @foreach (var image in item.ProductImages)
                    {
                        if (image.IsMain)
                        {
                            <img src="~/images/products/@image.ImageUrl" class="img-fluid w-100 rounded-start">
                        }
                    }
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text"><small class="text-muted">@item.Price</small></p>
                    </div>
                    <div class="row"><a class="btn btn-sucess">Add to basket</a> <a class="btn btn-danger" asp-action="remove" asp-controller="wishlist" asp-route-id="@item.Id">Remove from wishlist</a></div>
                </div>
            </div>
        </div>
        }
</div>

