@model DetailVM

@foreach (var item in Model.SearchProducts)
{
    <li class=" px-3  bg-dark p-2 search-list-content cool-search-list" style="width:90%;">
        <a class="text-dark d-flex flex-row align-content-center justify-content-between" style="width:100%; align-items: center" asp-controller="home" asp-action="detail" asp-route-Id="@item.Id">
            <span class="text-danger">@item.Name</span>
            @foreach (var image in item.ProductImages)
            {
                if (image.IsMain)
                {
                    <img width="100" src="~/images/products/@image.ImageUrl">
                }
            }
        </a>
    </li>
}
@foreach (var item in Model.Blogs)
{
    <li class=" px-3  bg-dark p-2 search-list-content cool-search-list" style="width:90%;">
        <a class="text-dark d-flex flex-row align-content-center justify-content-between" style="width:100%; align-items: center" asp-controller="blog" asp-action="detail" asp-route-Id="@item.Id">
            @if (item.Title.Length>15)
            {
                <span class="text-warning">@item.Title.Substring(0,14)...</span>
            }
            else{
                <span class="text-warning">@item.Title</span>
            }
            <img width="100" src="~/images/blog/@item.ImageUrl">
        </a>
    </li>
}