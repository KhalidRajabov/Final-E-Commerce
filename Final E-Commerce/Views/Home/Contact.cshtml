@model ContactVM
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="bg-gray py-3">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
        </ol>
    </div>
</nav>
<!-- contact -->
<section class="section">
    <div class="container">
        <div class="row justify-content-between">
            <!-- form -->
            <div class="col-lg-7 mb-5 mb-lg-0 text-center text-md-left">
                <h2 class="section-title">Contact Us</h2>
                <form method="post" class="row">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="col-md-6">
                            <input asp-for="Firstname" class="form-control mb-4 rounded-0" placeholder="First Name" >
                            <span asp-validation-for="Firstname" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="Lastname" class="form-control mb-4 rounded-0" placeholder="Last Name">
                            <span asp-validation-for="Lastname" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <input asp-for="Email" class="form-control mb-4 rounded-0" placeholder="Email (Reply will be sent to this email)">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    }
                    <div class="col-md-12">
                        <input asp-for="Subject" class="form-control mb-4 rounded-0" placeholder="Subject">
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <textarea asp-for="Message" class="form-control rounded-0 mb-4" placeholder="Message"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                        <div class="col-md-12">
                            <button type="submit" value="send" class="btn btn-primary">Submit</button>
                        </div>
                </form>
            </div>
            <!-- contact item -->
            <div class="col-lg-4">
                <div class="d-flex mb-60">
                    <i class="ti-location-pin contact-icon"></i>
                    <div>
                        <h4>Our Location</h4>
                        <p class="text-gray">Sabayil G.Aliyev 54D, Baku/Azerbaijan</p>
                    </div>
                </div>
                <div class="d-flex mb-60">
                    <i class="ti-mobile contact-icon"></i>
                    <div>
                        <h4>Call Me Now</h4>
                        <p class="text-gray mb-0">(+994) 077 564 7437</p>
                        <p class="text-gray mb-0">(+994) 051 518 6423</p>
                    </div>
                </div>
                <div class="d-flex mb-60">
                    <i class="ti-email contact-icon"></i>
                    <div>
                        <h4>Write To Me Now</h4>
                        <p class="text-gray mb-0">rammkhalid@gmail.com</p>
                        <p class="text-gray mb-0">rammkhalidreal@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}