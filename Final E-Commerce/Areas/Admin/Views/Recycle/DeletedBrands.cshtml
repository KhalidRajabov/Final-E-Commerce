@model ListBrandVM
@{
    ViewData["Title"] = "DeletedBrands";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
         @if (Model.Brands.Count>0)
            {
                <div class="card-body">
                 
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>BrandId</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Brands)
                                {

                                    <tr>
                                        <td>@item.Id</td>
                                        <td><img style="border-radius:0; width:100px; height:75px" src="~/images/brands/@item.ImageUrl" /></td>
                                        <td>@item.Name</td>
                                        <td>
                                            <a class="btn btn-success fs-5" asp-action="BrandDetails" asp-route-id="@item.Id"><i class="mdi mdi-information-outline"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else{
                <h4 class="text-success">No brands deleted</h4>
            }
        </div>
    </div>

</div>