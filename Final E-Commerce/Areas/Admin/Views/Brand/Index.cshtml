@model ListBrandVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">
                    <a class="btn btn-dark fs-5" asp-action="create">Add Brand</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>BrandId</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Brands)
                            {
                                
                                <tr>
                                    <td>@item.Id</td>
                                    <td><img style="border-radius:0; width:100px; height:75px" src="~/images/brands/@item.ImageUrl" /></td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a class="btn btn-warning fs-5" asp-action="update" asp-route-id="@item.Id"><i class="mdi mdi-key-plus"></i></a>
                                        <a class="btn btn-success fs-5" asp-action="details" asp-route-id="@item.Id"><i class="mdi mdi-information-outline"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>