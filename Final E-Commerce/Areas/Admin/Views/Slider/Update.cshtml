@model SliderVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container col-12 d-flex flex-column ">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group col-10 d-flex flex-column">
            <label asp-for="FirstTitle"></label>
            <input class="form-control" asp-for="FirstTitle"/>
            <span asp-validation-for="FirstTitle"></span>
        </div>
        <div class="form-group col-10 d-flex flex-column">
            <label asp-for="MainTitle"></label>
            <input class="form-control" asp-for="MainTitle" />
            <span asp-validation-for="MainTitle"></span>
        </div>
        <div class="form-group col-10 d-flex flex-column">
            <label asp-for="Subtitle"></label>
            <input class="form-control" asp-for="Subtitle" />
            <span asp-validation-for="Subtitle"></span>
        </div>
        <div class="form-group col-10 d-flex flex-column">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Link"></label>
            <input asp-for="Link" class="form-control">
            <span style="color: red;" asp-validation-for="Link"></span>
        </div>
        <div class="form-group col-10 d-flex flex-column">
            <label asp-for="Photo"></label>
            <input class="form-control" asp-for="Photo" />
            <span asp-validation-for="Photo"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <a class="btn btn-dark text-light col-6 col-sm-4 col-md-3 mt-3" asp-action="detail" asp-route-id="@Model.Id">Go back</a>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}