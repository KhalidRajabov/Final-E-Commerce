@model CategoryVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">


    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Table</h4>
                <form class="forms-sample" method="POST" enctype="multipart/form-data">

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control"  placeholder="Name">
                        <span style="color: red;" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span style="color: red;" asp-validation-for="Description"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Images"></label>
                        <input asp-for="Images" class="form-control">
                        <span style="color: red;" asp-validation-for="Images"></span>
                    </div>


                    <button type="submit" class="btn btn-success me-2">Save</button>
                    <a asp-action="index" class="btn btn-primary"> Go Back</a>
                </form>
            </div>
        </div>
    </div>


</div>


@section JqueryValidationScript{
    <partial name="_Validation" />
}